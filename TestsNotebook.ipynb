   ],
   "source": [
    "endereco_email = \"exemplo@dominio.com\"\n",
    "\n",
    "if validar_email(endereco_email):\n",
    "    print(\"Endereço de e-mail válido.\")\n",
    "else:\n",
    "    print(\"Endereço de e-mail inválido.\")"
   ]
