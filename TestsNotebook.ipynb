   "source": [
    "import re\n",
    "\n",
    "def validar_email(email):\n",
    "    # define a expressão regular para validar endereços de e-mail\n",
    "    padrao = r'^[\\w-]+(\\.[\\w-]+)*@[\\w-]+(\\.[\\w-]+)*(\\.[a-z]{2,})$'\n",
    "    \n",
    "    # verifica se o endereço de e-mail corresponde ao padrão\n",
    "    if re.match(padrao, email):\n",
    "        return True\n",
    "    else:\n",
    "        return False"
   ]
  },
